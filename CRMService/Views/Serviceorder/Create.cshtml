@model CRMService.Models.ServiceorderModel

@{
    ViewBag.Title = "Создание новой заявки";
    Layout = "~/Views/_LayoutPage1.cshtml";
}


@if (ViewBag.Success != null)
{
    <div>@ViewBag.Success</div>
}

<hr />

<h2>Создать новую заявку на техника</h2>


@using (Html.BeginForm("Create", "Serviceorder", FormMethod.Post))
{
    @Html.ValidationSummary(true)

    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)
    <span style="color:red;">@Html.ValidationMessageFor(model => model.Name)</span><br />
    
    @Html.LabelFor(model => model.Date)
    @Html.EditorFor(model => model.Date)
    <span style="color:red;">@Html.ValidationMessageFor(model => model.Date)</span><br />





    <input type="submit" value="Отправить" />
}

