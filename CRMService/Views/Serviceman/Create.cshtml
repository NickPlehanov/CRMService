@model CRMService.Models.ServicemanModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/_LayoutPage1.cshtml";
}


@if (ViewBag.Success != null)
{
    <div>@ViewBag.Success</div>
}

<hr />

<h2>Создать нового техника</h2>


@using (Html.BeginForm("Create", "Serviceman", FormMethod.Post))
{
    @Html.ValidationSummary(true)

    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)
    <span style="color:red;">@Html.ValidationMessageFor(model => model.Name)</span><br/>
    
    @Html.LabelFor(model => model.Phone)
    @Html.TextBoxFor(model => model.Phone)
    <span style="color:red;">@Html.ValidationMessageFor(model => model.Phone)</span><br />
    
    @Html.LabelFor(model => model.password)
    @Html.TextBoxFor(model => model.password)
    <span style="color:red;">@Html.ValidationMessageFor(model => model.password)</span><br />



    <input type="submit" value="Отправить" />
}

